<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiaobaowang.tianbo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_type"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/device_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack" />
    </LinearLayout>


    <Button
        android:id="@+id/id_card_read_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_card_read" />

    <Button
        android:id="@+id/id_card_ocr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_card_ocr" />

    <Button
        android:id="@+id/usb_printer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thermal_printers" />

    <Button
        android:id="@+id/qrcode_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="识别条码/二维码" />

    <TextView
        android:id="@+id/qrcode_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="条码/二维码：" />
</LinearLayout>
